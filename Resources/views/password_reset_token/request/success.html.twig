<p class="h2">
    {% trans with {'%email%': password_reset_token.user.email} %}password_reset_token.request.success.text{% endtrans %}
    {% if webmail_link %}
        {% trans %}password_reset_token.request.check_mail{% endtrans %}
        <a href="{{ webmail_link.url }}" target="_blank">
            {% if webmail_link.icon %}
                <img src="{{ webmail_link.icon }}" alt="{{ webmail_link.name }}" title="{{ webmail_link.name }}">
            {% else %}
                {{ webmail_link.name }}
            {% endif %}
        </a>
    {% endif %}
</p>
